<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.YOGIFY" parent="Theme.Material3.DayNight">
        <!-- Customize your dark theme here. -->
        <item name="android:background">@color/customBlack</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="checkbox_button" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:padding">30dp</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:background">@drawable/on_btn_click_night</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="btn" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/on_btn_click</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="backgroundTint">@color/lightGreen</item>
        <item name="android:textStyle">bold</item>

    </style><style name="circular_radio_button" parent="Widget.AppCompat.Button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">@drawable/on_btn_click</item>
    <item name="android:button">@android:color/transparent</item>


</style>

    <style name="ScreenBackground">
        <item name="android:background">@color/customBlack</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/pureWhite</item>
    </style>

    <style name="descriptionColor">
        <item name="android:textColor">@color/lightWhite</item>
    </style>

    <style name="button">
        <item name="android:backgroundTint">@color/orange</item>
